<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #1C2626;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="masterproject.client.LandingController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <Label style="-fx-text-fill: #fff;" text="Matrices Master">
      <font>
         <Font size="36.0" />
      </font>
   </Label>
   <HBox alignment="CENTER" fillHeight="false">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <Button mnemonicParsing="false" onAction="#openPhotoEditor" prefHeight="250.0" prefWidth="250.0" style="-fx-background-color: #fff; -fx-border-color: #552D96; -fx-border-radius: 16px; -fx-background-radius: 18px; -fx-border-width: 3px; -fx-cursor: pointer;" text="Images Filter" textFill="#552d96">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button mnemonicParsing="false" onAction="#openMatricesCalculator" prefHeight="250.0" prefWidth="250.0" style="-fx-background-color: #fff; -fx-border-color: #552D96; -fx-border-radius: 16px; -fx-background-radius: 18px; -fx-border-width: 3px; -fx-cursor: pointer;" text="Matrices Calculator" textFill="#552d96" HBox.hgrow="ALWAYS">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
         <font>
            <Font size="24.0" />
         </font>
      </Button>
   </HBox>
</VBox>
